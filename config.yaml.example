# 文章分类系统配置文件示例
# 复制此文件为 config.yaml 并根据实际情况修改配置

# Ollama 配置
ollama:
  base_url: "http://localhost:11434"
  model: "gpt-oss:20b"           # 修改为你的模型名称
  temperature: 0.3              # 较低温度，保证分类稳定性
  timeout: 60
  max_retries: 3

# 分类器配置
classifier:
  max_category_levels: 3
  min_confidence: 0.6           # 低于此值触发人工审核
  initial_training_size: 100    # 初始建立分类体系的文章数
  optimization_interval: 100    # 每100篇触发优化
  auto_optimize: true           # 自动优化分类

# 数据库配置
database:
  host: "localhost"
  port: 5432
  database: "article_classifier"
  user: "article_classifier_user"
  # password 从环境变量 POSTGRES_PASSWORD 读取

# JSON 存储配置
storage:
  json_root: "data/json"
  organize_by_date: true        # 按年月组织目录
  save_raw_content: true        # 保存原始内容
  compression: false            # 不压缩（方便检索）

# 处理配置
processing:
  batch_size: 10                # 每批处理10个文件
  enable_parallel: false        # 单机 Ollama，关闭并行
  checkpoint_interval: 100      # 每100篇保存检查点
  log_level: "INFO"
